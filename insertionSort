// insertion sort
#include <stdio.h>
void insertion_sort(int arr[],int n);

int main()
{
    int arr[10],i,n;
    printf("Enter the number of elements in array: ");
    scanf("%d", &n);
    
    printf("Enter the elements: ");
    for(i=0; i<n; i++) {
        scanf("%d", &arr[i]);
    }
    
    insertion_sort(arr, n);
    
    for(i=0; i<n; i++) {
        printf("\n %d", arr[i]);
    }
}

void insertion_sort(int arr[], int n) {
    int i,j, temp;
    
    for(i=1; i<n; i++) {
        temp=arr[i];
        j=i-1;
        while((temp<arr[j]) && (j>=0)) {
            arr[j+1] = arr[j];
            j--;
        }
        arr[j+1] = temp;
    }
}
